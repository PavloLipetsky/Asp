@model IEnumerable<ToDOList.Models.ToDo>

@{
    ViewData["Title"] = "ToDOListSelfWork";
}



<p>
    <a asp-action="Create">Add new ToDo Element</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Content
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {@if (!item.IsDone)
        {
                <tr>
                    <td>
                        @item.Content                                                
                    </td>
                    <td>
                        UnDone
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="IsDone" asp-route-id="@item.Id">Done</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        @foreach (var item in Model)
        {
            @if (item.IsDone)
            {
                <tr>
                    <td>
                        <div class="CompletedToDo">@item.Content</div>
                    </td>
                    <td>
                        Done
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="IsDone" asp-route-id="@item.Id">UnDo</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
